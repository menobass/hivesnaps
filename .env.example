# Environment variables for HiveSnaps
# Copy this file to .env and fill in your values
# DO NOT COMMIT .env TO GIT

# Tenor API Configuration (for GIF picker)
EXPO_PUBLIC_TENOR_API_KEY=your_tenor_api_key_here
EXPO_PUBLIC_BASE_API_URL=https://menosoft.xyz/api

# 3Speak Video Upload Configuration
EXPO_PUBLIC_3SPEAK_API_KEY=your_3speak_api_key_here

# 3Speak Audio API Configuration
EXPO_PUBLIC_AUDIO_API_ENDPOINT=https://audio.3speak.tv

# IPFS Upload Configuration (for thumbnails)
EXPO_PUBLIC_IPFS_UPLOAD_ENDPOINT=https://ipfs.3speak.tv/api/v0/add
EXPO_PUBLIC_IPFS_GATEWAY_URL=https://ipfs.3speak.tv/ipfs
# EXPO_PUBLIC_IPFS_API_KEY=your_ipfs_key_if_required

# Ecency Chat Integration
EXPO_PUBLIC_ECENCY_API_BASE_URL=https://ecency.com/api/mattermost
